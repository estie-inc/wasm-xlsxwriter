{
    "name": "wasm-xlsxwriter",
    "version": "0.8.1",
    "type": "module",
    "main": "nodejs/wasm_xlsxwriter.js",
    "types": "web/wasm_xlsxwriter.d.ts",
    "browser": "web/wasm_xlsxwriter.js",
    "files": [
        "web/wasm_xlsxwriter_bg.wasm",
        "web/wasm_xlsxwriter_bg.wasm.d.ts",
        "web/wasm_xlsxwriter.js",
        "web/wasm_xlsxwriter.d.ts",
        "nodejs/wasm_xlsxwriter_bg.wasm",
        "nodejs/wasm_xlsxwriter.js"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/estie-inc/wasm-xlsxwriter.git"
    },
    "scripts": {
        "build": "npm run build:web && npm run build:nodejs",
        "build:web": "RUSTFLAGS='-C target-feature=+bulk-memory' wasm-pack build ./rust -t web -d ../web --release && rm ./web/.gitignore",
        "build:nodejs": "RUSTFLAGS='-C target-feature=+bulk-memory' wasm-pack build ./rust -t nodejs -d ../nodejs --release && rm ./nodejs/.gitignore",
        "test": "vitest"
    },
    "devDependencies": {
        "@tsconfig/strictest": "2.0.5",
        "@types/node": "22.13.10",
        "@types/unzipper": "0.10.11",
        "jsdom": "26.0.0",
        "typescript": "5.8.2",
        "unzipper": "0.12.3",
        "vitest": "3.0.8",
        "wasm-pack": "0.13.1"
    }
}
